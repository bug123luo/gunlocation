<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:amq="http://activemq.apache.org/schema/core"
       xmlns:jms="http://www.springframework.org/schema/jms"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.3.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
        http://www.springframework.org/schema/jms
        http://www.springframework.org/schema/jms/spring-jms-4.3.xsd
        http://activemq.apache.org/schema/core
        http://activemq.apache.org/schema/core/activemq-core-5.12.1.xsd">

    <!-- <amq:connectionFactory id="amqConnectionFactory"
                           brokerURL="tcp://112.74.51.194:61616"
                           userName="admin"
                           password="admin" /> -->
     <!-- <amq:connectionFactory id="amqConnectionFactory"
                           brokerURL="tcp://120.76.156.120:6160?useInactivityMonitor=true&amp;useKeepAlive=true"
                           userName="admin"
                           password="admin" /> --> 
     <amq:connectionFactory id="amqConnectionFactory"
                           brokerURL="tcp://112.74.51.194:61616?useKeepAlive=true"
                           userName="admin"
                           password="admin" />                     
     <!-- <amq:connectionFactory id="amqConnectionFactory"
                           brokerURL="tcp://192.168.0.103:61616?useKeepAlive=true"
                           userName="admin"
                           password="admin" />-->
                   
    <!-- 配置JMS连接工长 -->
    <bean id="connectionFactory"
          class="org.springframework.jms.connection.CachingConnectionFactory">
        <constructor-arg ref="amqConnectionFactory" />
        <property name="sessionCacheSize" value="1000" />
    </bean>

    <!-- 定义消息队列（Queue） -->
    <bean id="demoQueueDestination" class="org.apache.activemq.command.ActiveMQQueue">
        <!-- 设置消息队列的名字 -->
        <constructor-arg>
            <value>InputQueue,WebInQueue</value>
        </constructor-arg>
    </bean>
    <!-- 定义消息发送队列（Queue）  -->
    	<!-- 定义队列目的地 ，点对点 -->
	<bean id="outQueueDestination" class="org.apache.activemq.command.ActiveMQQueue">
		<constructor-arg>
			<value>OutQueue</value>
		</constructor-arg>
    </bean>
    <bean id="webOutQueueDestination" class="org.apache.activemq.command.ActiveMQQueue">
    	<constructor-arg>
    		<value>WebOutQueue</value>
    	</constructor-arg>
    </bean>
    
    <bean id="topicDestination" class="org.apache.activemq.command.ActiveMQTopic" >
      <constructor-arg>
    	  <value>WebTopic</value>
  	  </constructor-arg>
  	</bean>
  	
    <!-- 定义OutQueue 发送类 -->
    <bean id="outQueueSender" class="com.tct.jms.producer.OutQueueSender">
    	 <property name="jmsQueueTemplate" ref="jmsQueueTemplate" />  
         <!-- <property name="destination" ref="outQueueDestination" /> -->
    </bean>
    <bean id="webOutQueueSender" class="com.tct.jms.producer.WebOutQueueSender">
    	 <property name="jmsQueueTemplate" ref="jmsQueueTemplate" />  
         <!-- <property name="destination" ref="webOutQueueDestination" /> -->
    </bean>
    <bean id="webTopicSender" class="com.tct.jms.producer.WebTopicSender">
    	 <property name="jmsTopicTemplate" ref="jmsTopicTemplate" />  
         <!-- <property name="destination" ref="topicDestination" /> -->
    </bean>

    <!-- 配置JMS模板（Queue），Spring提供的JMS工具类，它发送、接收消息。 -->
    <bean id="jmsQueueTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="connectionFactory" ref="connectionFactory" />
        <!-- <property name="defaultDestination" ref="demoQueueDestination" /> -->
        <!-- <property name="receiveTimeout" value="30000" /> -->
        <!-- true是topic，false是queue，默认是false，此处显示写出false -->
        <property name="pubSubDomain" value="false" />
        <property name="explicitQosEnabled" value="true"/>
    </bean>

   	<bean id="jmsTopicTemplate" class="org.springframework.jms.core.JmsTemplate">
     	<property name="connectionFactory" ref="connectionFactory" />
   		<property name="pubSubDomain" value="true" />
   		<property name="deliveryMode" value="2"/>
   		<property name="explicitQosEnabled" value="true"/>
  	</bean>

    <!-- 配置消息队列监听者（Queue） -->
    <bean id="queueMessageListener" class="com.tct.jms.consumer.ConsumerMessageListener" />

    <!-- 显示注入消息监听容器（Queue），配置连接工厂，监听的目标是demoQueueDestination，监听器是上面定义的监听器 -->
    <bean id="queueListenerContainer"
          class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="connectionFactory" />
        <property name="destination" ref="demoQueueDestination" />
        <property name="messageListener" ref="queueMessageListener" />
    </bean>

</beans>