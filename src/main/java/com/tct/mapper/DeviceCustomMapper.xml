<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tct.mapper.DeviceCustomMapper">  
  <select id="selectByDeviceQueryVo" parameterType="com.tct.po.DeviceQueryVo" resultType="int">
 		SELECT id FROM device
  		<where>
			<if test="deviceCustom !=null and deviceCustom.deviceNo!=null and deviceCustom.deviceNo.length()>0">
				device_no=#{deviceCustom.deviceNo}
			</if>
		</where>
	</select>
	
	  <select id="selectDeviceByDeviceQueryVo" parameterType="com.tct.po.DeviceQueryVo" resultType="com.tct.po.DeviceCustom">
 		SELECT id,device_no as deviceNo,device_name as deviceName FROM device
  		<where>
			<if test="deviceCustom !=null and deviceCustom.deviceName!=null">
				device_name=#{deviceCustom.deviceName}
			</if>
			<if test="deviceCustom !=null and deviceCustom.password!=null">
				and password=#{deviceCustom.password}
			</if>
		</where>
	</select>
</mapper>