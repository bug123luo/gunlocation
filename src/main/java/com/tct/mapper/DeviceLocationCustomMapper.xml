  	<select id="selectByDeviceLocationQueryVo" parameterType="com.tct.po.DeviceLocationQueryVo" resultType="com.tct.po.DeviceLocationCustom">
		SELECT id,device_no deviceNo,latitude,longitude,create_time createTime,update_time updateTime,VERSION 
		FROM device_location WHERE id =(SELECT MAX(d2.id) FROM device_location AS d2  WHERE device_no=#{deviceLocationCustom.deviceNo});
  	</select>
  	
